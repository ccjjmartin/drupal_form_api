/**
 * Madlib validate function
 */
function drupal_form_api_madlib_form_validate($form, &$form_state) {
  $verb_ing = $form_state['values']['drupal_form_api_verb_ing_textfield'];
  if (substr($verb_ing, strlen($verb_ing) - 3, 3) != 'ing') {
    form_set_error('drupal_form_api_verb_ing_textfield',
      'Verb_ing: Please enter a word that ends in "ing"');
  }
}

/**
 * Madlib form submit handler
 */
function drupal_form_api_madlib_form_submit($form, &$form_state) {
  drupal_set_message(t('Answers received'));
  $form_state['rebuild'] = TRUE;
}